@model Annonssystem.Models.PrenumerantDetails

@{
    ViewData["Title"] = "EditPrenumerant";
}

<h1>Edit Prenumerant</h1>

<h4>Prenumerant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPrenumerant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pr_preNr" class="control-label"> Prenumerationsnummer </label>
                <input asp-for="pr_preNr" type="hidden" />
                <p class="form-control-static">@Model.pr_preNr</p>
            </div>
            <div class="form-group">
                <label asp-for="pr_namn" class="control-label"> Namn </label>
                <input asp-for="pr_namn" class="form-control" />
                <span asp-validation-for="pr_namn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pr_teleNr" class="control-label"> Telefonnummer </label>
                <input asp-for="pr_teleNr" class="form-control" />
                <span asp-validation-for="pr_teleNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pr_utAdress" class="control-label"> Utdelningsadress </label>
                <input asp-for="pr_utAdress" class="form-control" />
                <span asp-validation-for="pr_utAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pr_postNr" class="control-label"> Postnummer </label>
                <input asp-for="pr_postNr" class="form-control" />
                <span asp-validation-for="pr_postNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pr_ort" class="control-label"> Postort </label>
                <input asp-for="pr_ort" class="form-control" />
                <span asp-validation-for="pr_ort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SkapaAnnons" asp-route-preNr="@Model.pr_preNr">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
